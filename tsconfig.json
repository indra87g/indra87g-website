{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "astro/tsconfigs/strict",
  "display": "Default",
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "noEmit": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["src/*"],
      "@/lib/*": ["lib/*"]
    },
    "include": ["**/*.ts", "**/*.tsx", "**/*.astro"],
    "exclude": ["dist", "docs", "node_modules"]
  }
}
