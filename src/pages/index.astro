import { PROFILE } from '@/constants/profile.ts'
---

<Base meta={{ title: 'indra87g - Homepage' }}>
  <div
    class="mt-5 flex flex-wrap items-center justify-between gap-8 pb-12 text-text dark:text-darkText"
  >
    <div class="max-w-md">
